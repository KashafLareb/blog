<h1><%= @article.title %></h1>

<p><%= @article.body %></p>


  <button><%= link_to "Edit", edit_article_path(@article) %></button>
  <button><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></button>


<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<br><br>
<button><%= link_to "Back to Articles", root_path(@article)%></button>
